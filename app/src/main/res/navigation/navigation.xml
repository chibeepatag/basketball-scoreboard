<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/setupFragment">

    <fragment
        android:id="@+id/setupFragment"
        android:name="com.chibee.scoreboard.SetupFragment"
        android:label="SetupFragment" >
        <action
            android:id="@+id/action_setupFragment_to_scoreboardFragment"
            app:destination="@id/scoreboardFragment" >
            <argument
                android:name="teamAName"
                android:defaultValue="Charlotte Hornets" />
            <argument
                android:name="teamBName"
                android:defaultValue="Toronto Raptors" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/scoreboardFragment"
        android:name="com.chibee.scoreboard.ScoreboardFragment"
        android:label="ScoreboardFragment" >
        <argument
            android:name="teamAName"
            app:argType="string" />
        <argument
            android:name="teamBName"
            app:argType="string" />
        <action
            android:id="@+id/action_scoreboardFragment_to_gameHistoryFragment"
            app:destination="@id/gameHistoryFragment"
            app:popUpTo="@id/setupFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameHistoryFragment"
        android:name="com.chibee.scoreboard.GameHistoryFragment"
        android:label="fragment_game_history"
        tools:layout="@layout/fragment_game_history" >
        <action
            android:id="@+id/action_gameHistoryFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.chibee.scoreboard.GameFragment"
        android:label="GameFragment" >
        <argument
            android:name="gameId"
            app:argType="long" />
    </fragment>
</navigation>